<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/city_details_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="invisible"
        android:indeterminate="true"
        >
    </ProgressBar>

    <GridLayout
        android:id="@+id/city_details_info"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill"
        android:useDefaultMargins="true"
        android:alignmentMode="alignBounds"
        android:columnCount="2"
        android:rowCount="3" >

        <TextView
            android:text="@string/city_details_name"
            android:id="@+id/city_details_name"
            android:layout_row="0"
            android:layout_column="0"
            style="@style/detailsText" />
        <TextView
            android:text="@string/city_details_data_placeholder"
            android:id="@+id/city_details_name_value"
            android:layout_row="0"
            android:layout_column="1"
            style="@style/detailsTextValue" />

        <TextView
            android:text="@string/city_details_temperature"
            android:id="@+id/city_details_temperature"
            android:layout_row="1"
            android:layout_column="0"
            style="@style/detailsText" />
        <TextView
            android:text="@string/city_details_data_placeholder"
            android:id="@+id/city_details_temperature_value"
            android:layout_row="1"
            android:layout_column="1"
            style="@style/detailsTextValue" />

        <TextView
            android:text="@string/city_details_humidity"
            android:id="@+id/city_details_humidity"
            android:layout_row="2"
            android:layout_column="0"
            style="@style/detailsText" />
        <TextView
            android:text="@string/city_details_data_placeholder"
            android:id="@+id/city_details_humidity_value"
            android:layout_row="2"
            android:layout_column="1"
            style="@style/detailsTextValue" />
    </GridLayout>
</LinearLayout>