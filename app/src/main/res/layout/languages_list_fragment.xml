<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/languages_list_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/lang_list_horizonal_margin"
    android:paddingRight="@dimen/lang_list_horizonal_margin"
    android:paddingBottom="@dimen/lang_list_bottom_margin"
    android:orientation="vertical"
    android:clickable="true">

    <ListView
        android:id="@+id/languages_list"
        android:layout_width="@dimen/lang_list_width"
        android:layout_height="fill_parent"
        android:layout_gravity="left"
        android:background="@color/list_color"/>


</LinearLayout>